<div class="row">
      <h2>Nuevo alcalde para <%=@city.name%></h2>
      <%= form_for [@city], :url => { :action => "addMayor"}, html: {class: 'form-horizontal' } do |f| %>
      <div class="field"></div>
      <div class="col-md-3">
            <%= f.label :mayor_id, 'Alcalde', class: 'control-label' %>
      </div>
      <div class="col-md-9">
            <%= f.select :mayor_id, @userlist %>
      </div>
      <td></td>
      <%= hidden_field_tag :id, @city.id %>
      <br/>
      <div class="field">
            <%= f.submit 'Guardar', class:'btn btn-primary' %>
      </div>
      <% end %>
</div>

<div class="form-row">
      <div class="form-title">
            Cambio de alcalde para <%=@city.name%>
      </div>

      <div class="form-content-box">
            <%= form_for [@city], :url => { :action => "add_mayor"}, html: {class: 'form-horizontal' } do |f| %>
                  <div class="field">
                        <%= f.label :mayor_id, 'Alcalde', class: 'control-label' %>
                  </div>
                  <div class="col-md-9">
                        <%= f.select :mayor_id, @userlist %>
                  </div>
                        <%= hidden_field_tag :id, @city.id %>
                  <div class="field">
                        <%= f.submit 'Guardar', class:'btn btn-primary' %>
                  </div>
            <% end %>

      </div>
</div>

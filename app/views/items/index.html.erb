
<div class="panel">
      <div class="title-box">
            Objetos existentes:
      </div>
      <div class="content-box">
            <% if @items.blank? %>
            <tr>
                  <td >
                        <em>No se han encontrado items</em>
                  </td>
            </tr>
            <% else %>
            <table>
                  <thead>
                        <tr>
                              <th>Nombre</th>
                              <th>Descripci√≥n</th>
                              <th></th>
                              <th></th>
                        </tr>
                  </thead>
                  <tbody>
                        <% @items.each do |i| %>
                        <tr>
                              <td>
                                    <%= link_to "#{i.name}", i %>
                              </td>
                              <td>
                                    <%= i.description %>
                              </td>
                              <td>
                                    <%  if @users_item.find_by(item_id: i.id, user_id: @user.id) == nil%>
                                    <div class='get'>
                                          <%= button_to "get item", user_get_item_path(i.id), :method => "post" %>
                                    </div>
                                    <% end %>
                                    <% if @users_item.find_by(item_id: i.id, user_id: @user.id) %>
                                    <div class='use'>
                                          <%= button_to "use item", user_use_item_path(i.id), :method => "post" %>
                                    </div>
                                    <% end %>
                              </td>
                        </tr>
                        <% end %>
                  </tbody>
            </table>
            <% end %>

      </div>
</div>

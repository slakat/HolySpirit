.form-row
      .form-title
            Sube una foto para
            = @point.name
      .row
            = form_for [@picture], html: {class: 'form-horizontal' } do |f|
                  = render 'form_edit', f: f
                  %br
                  .field
                        = f.submit 'Guardar', class:'btn btn-primary'
